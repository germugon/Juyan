package com.controller;

import java.math.BigDecimal;

import javax.annotation.Resource;
import javax.servlet.http.HttpSession;

import org.apache.log4j.Logger;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

import com.model.Product;
import com.model.ProductImage;
import com.model.ProductSalesattr;
import com.model.Staff;
import com.model.User;
import com.service.ProductService;

@Controller
@RequestMapping("jsp")
public class ProductController {
	@Resource
	private ProductService productService;
	
	private Logger logger = Logger.getLogger(ProductController.class);
	
	@RequestMapping("addProduct")  
	public ModelAndView addProduct(@RequestParam("prod_no") String prod_no) {
		
		ModelAndView modelAndView = new ModelAndView(); 
		
		if(productService.ifProdNoExist(prod_no)) {
			modelAndView.setViewName("error");
			modelAndView.addObject("msg", "产品编号已存在");
		} else {
			Product product = new Product();
			ProductImage productImage = new ProductImage();
			ProductSalesattr productSalesattr = new ProductSalesattr();
			
			int res = productService.addProduct(product, productImage, productSalesattr);
			
			if(res > 0) {
				modelAndView.setViewName("addProduct_success");
				modelAndView.addObject("msg", "添加产品成功");
			} else {
				modelAndView.setViewName("error");
				modelAndView.addObject("msg", "添加产品失败");
			}
		}
		return modelAndView;
	}
}
