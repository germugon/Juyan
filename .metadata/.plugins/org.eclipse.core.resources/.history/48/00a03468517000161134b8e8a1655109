package com.service;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.dao.MerchantMapper;
import com.dao.RoleMapper;
import com.dao.UserMapper;
import com.model.Merchant;
import com.model.Role;
import com.model.User;
import com.model.UserExample;
import com.model.UserExample.Criteria;

@Service
public class UserService {

	@Resource
	private UserMapper userMapper;
	@Resource
	private RoleMapper roleMapper;
	@Resource
	private MerchantMapper merchantMapper;
	
	public User ifUserExist(String account, String password) {
		
		UserExample example = new UserExample();
		Criteria criteria = example.createCriteria();
		criteria.andAccountEqualTo(account).andPasswordEqualTo(password);
		
		List<User> list = userMapper.selectByExample(example);
		
		if( list != null && list.size() > 0 )
			return list.get(0);
		else
			return null;
	}
	
	public String verifyPhone(String phone) {
		
		String verification_code = "";
		return verification_code;
	}

	public boolean ifAccountExist(String account) {
		
		UserExample example = new UserExample();
		example.createCriteria().andAccountEqualTo(account);
		
		List<User> list = userMapper.selectByExample(example);
		
		if( list != null && list.size() > 0 )
			return true;
		else
			return false;
	}
	
	public int addMerchant(Merchant merchant) {
		
		int roleNo = merchant.getRoleNo();
		Role role = roleMapper.selectByPrimaryKey(roleNo);
		merchant.setRoleName(role.getRoleName());
		
		int res = merchantMapper.insert(merchant);
		if(res > 0) {
			User user = new User(merchant.getMerchantNo(), merchant.getName(), 
					merchant.getPassword(), merchant.getRoleNo(), merchant.getRoleName());
			res = userMapper.insert(user);
		}
		
		return res;
	}
	
}
